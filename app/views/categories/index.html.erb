<div class="container pt-40 pb-40">
  <% ServiceCategory.active.each do |service_category| %>
    <div class="panel-group">
      <div class="panel panel-default"> 
        <section id="service-category-<%= service_category.id %>" data-toggle="collapse" href="#service-panel-<%= service_category.id%>">
          <div class="container">
            <ol class="breadcrumb">
              <li class="active">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a class=" list-group-item-action"><h5><%= service_category.short_name %></h5></a>
                  </h4>
                </div>
              </li>
            </ol>
          </div>
        </section>
        <div id="service-panel-<%= service_category.id%>" class='panel-collapse <% if params[:service_category] != "#{service_category.id}" %>collapse<% end %>'>
          <% service_category.main_categories.active.each do |main_category| %>
            <div class="container" id="main-category-<%= main_category.id %>">
              <div class="row">
                <div class="col-lg-12">
                  <!-- <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action main-color-bg"><h5><%= main_category.short_name %></h5></a>
                    <% main_category.categories.active.each do |category| %>
                      <%= link_to category.name, category_products_path(category), class: "list-group-item list-group-item-action" %>
                    <% end %>
                  </div> -->
                  <div class="list-group">
                    <div class="panel-group">
                      <div class="panel panel-default">
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a data-toggle="collapse" href="#<%= main_category.id%>" class="list-group-item list-group-item-action main-color-bg"><h5><%= main_category.short_name %></h5></a>
                          </h4>
                        </div>
                        <div id="<%= main_category.id%>" class="panel-collapse collapse <% if params[:scrollto] == 'main-category-' + main_category.id.to_s %>show<% end %>">
                          <ul class="list-group">
                            <% main_category.categories.active.each do |category| %>
                              <%= link_to category.name, category.url, class: "list-group-item list-group-item-action" %>
                            <% end %> 
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>