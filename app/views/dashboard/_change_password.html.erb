<div class="dash-row">
  <button id="changepass" data-target="#forgotPass" data-toggle="modal" href="#">Change password</button>
  <div class="modal fade" id="forgotPass" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title text-center">Change Password</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%= form_for(@user, url: dashboard_update_password_path, method: :post, html: {id: "update_password_form"}) do |f| %>
          <div class="col-md-14">
            <div class="card-body">
              <fieldset>
                <%= f.password_field :old_password, class: "form-control", placeholder: "Enter Old Password", required: true, autofocus: true, autocomplete: "off", :"data-validation-engine" => "validate[required,ajax[ajaxUserCall]]" %><br>
                <%= f.password_field :password, class: "form-control validate[required,minSize[5]]", placeholder: "Enter New password", required: true, autofocus: true, autocomplete: "off", id: "user_new_password" %><br>
                <%= f.password_field :password_confirmation, class: "form-control", :"data-validation-engine" => "validate[required,equals[user_new_password]]", placeholder: "Confirm New Password", required: true, autocomplete: "off" %>
              </fieldset>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Reset Password", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#update_password_form").validationEngine();
</script>