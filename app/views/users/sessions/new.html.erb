  <%#= render "users/shared/links" %> 


  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

    <!-- <img class="center" src="/favicon.ico"> -->
    <h1 class="text-center">Sign In and Enjoy</h1>

    <!-- <br> -->

    <div class="form-label-group">
      <%= f.text_field :login, class: "form-control", placeholder: "Email/Phone", required: true, autofocus: true, required: true %>
      <%= f.label :login, "Email/Phone" %>
    </div>

    <div class="form-label-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %>
      <%= f.label :password %><br />
    </div>

    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %> Remember me
      </label>
      <br>
      <%#= link_to "Forgot Password?", "#forgot-pass", "data-toggle": :modal %>
      <!-- <br> -->
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    </div>
    <span>
      <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
      <!-- <span>
        <%#= link_to "Sign up now", new_registration_path(resource_name), class: "btn btn-lg btn-primary btn-block size" %>
      </span> -->
    </span>
    <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
    <div id="openidcontainer" class="openidcontainer social-login-icons">
      <div class="ortext" style="margin-bottom: 30px;">Or</div>
      <div>
        <a>Sign in with</a>
        <% if devise_mapping.omniauthable? %>
          <% resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider) do %>
              <i class="fa fa-<%= provider.to_s.split('_')[0] %>"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <p class="mt-5 mb-3 text-muted text-center">
      Do not have an account with us?
      <%= link_to "Sign up here", new_registration_path(resource_name) %><br />
    </p>
  <% end %>
